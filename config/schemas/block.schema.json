{
  "$id": "block.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "block",
  "type": "object",
  "required": [ "name", "values" ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Config block name",
      "minLength": 2
    },
    "type": {
      "type": "string",
      "description": "Config type name.",
      "enum": [ "generic", "exec", "certificate" ]
    },
    "values": {
      "oneOf": [
        { "type": "object" },
        { "$ref": "certificate.schema.json" }
      ]
    }
  }
}
