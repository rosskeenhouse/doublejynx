{
  "$id": "container.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "container",
  "description": "A docker container",
  "type": "object",
  "required": [ "name" ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z]([-_a-z0-9]{0,31})$"
    }
  }
}
